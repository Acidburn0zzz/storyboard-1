{
  "private": true,
  "scripts": {
    "bootstrap": "babel-node scripts/bootstrap",
    "lint": "eslint packages",
    "compile": "babel-node scripts/forEach \"yarn run compile\"",
    "start": "cd packages/storyboard-examples && yarn run example",
    "buildAllProducts": "yarn run buildServerLogsApp && yarn run buildExamples && yarn run buildExtension",
    "buildServerLogsApp": "cd packages/storyboard-server-logs-app && yarn run build",
    "buildExamples": "cd packages/storyboard-examples && yarn run build",
    "buildExtension": "cd packages/storyboard-extension-chrome && yarn run build",
    "xxl": "xxl --src packages --exclude node_modules,/lib/",
    "testFast": "mocha && jest",
    "test": "yarn run testFast",
    "travis": "yarn run bootstrap && yarn run compile && yarn run test"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.18.2",
    "babel-eslint": "7.0.0",
    "babel-jest": "17.0.2",
    "babel-loader": "6.2.10",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-2": "6.18.0",
    "chai": "3.5.0",
    "coffee-script": "1.10.0",
    "coveralls": "2.11.15",
    "cross-env": "1.0.7",
    "css-loader": "0.26.1",
    "eslint": "3.8.1",
    "eslint-config-airbnb": "12.0.0",
    "eslint-plugin-flowtype": "2.20.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.4.1",
    "file-loader": "0.10.0",
    "globby": "^6.1.0",
    "ignore-styles": "4.0.0",
    "jest": "17.0.3",
    "jest-html": "^1.2.0",
    "mocha": "2.4.5",
    "node-sass": "4.5.0",
    "sass-loader": "4.1.1",
    "shelljs": "^0.7.6",
    "sinon": "1.17.6",
    "sinon-chai": "2.8.0",
    "split": "^1.0.0",
    "storyboard": "^2.0.0",
    "style-loader": "0.13.1",
    "timm": "^1.2.3",
    "webpack": "2.2.1",
    "xxl": "^1.0.1"
  },
  "nyc": {
    "exclude": [
      "packages/storyboard/lib/vendor/**",
      "node_modules/**/*",
      "**/node_modules/**/*",
      "test/**"
    ]
  },
  "jest": {
    "testRegex": "packages/.*__tests__/.*\\.(test|spec)\\.(js|jsx)$",
    "moduleNameMapper": {
      "^.+\\.(css|less|sass)$": "<rootDir>/test/emptyObject.js",
      "^.+\\.(gif|ttf|eot|svg)$": "<rootDir>/test/emptyString.js"
    },
    "coverageDirectory": ".nyc_output",
    "coverageReporters": [
      "json",
      "text",
      "html"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-html"
    ],
    "collectCoverageFrom": [
      "packages/*/src/**/*.js",
      "!packages/storyboard-cli/**",
      "!packages/storyboard-examples/**",
      "!test/**",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/__mocks__/**"
    ]
  }
}
