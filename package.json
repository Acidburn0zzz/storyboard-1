{
  "name": "storyboard",
  "private": true,
  "version": "3.0.0-rc.1",
  "author": "Guillermo Grau Panea",
  "license": "MIT",
  "description": "End-to-end, hierarchical, real-time, colorful logs and stories",
  "keywords": [
    "log",
    "logging",
    "websockets",
    "console",
    "isomorphic"
  ],
  "homepage": "https://github.com/guigrpa/storyboard#readme",
  "bugs": {
    "url": "https://github.com/guigrpa/storyboard/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guigrpa/storyboard.git"
  },
  "scripts": {
    "travis": "yarn run bootstrap && yarn run compile && yarn run test",
    "build": "yarn run bootstrap && yarn run lint && yarn run compile && yarn run buildAllProducts && yarn run test && yarn run xxl && yarn run prepareRelease",
    "bootstrap": "babel-node scripts/bootstrap",
    "compile": "babel-node scripts/forEach \"yarn run compile\"",
    "buildAllProducts": "yarn run buildServerLogsApp && yarn run buildExamples && yarn run buildExtension",
    "buildServerLogsApp": "cd packages/storyboard-server-logs-app && yarn run build",
    "buildExamples": "cd packages/storyboard-examples && yarn run build",
    "buildExtension": "cd packages/storyboard-extension-chrome && yarn run build",
    "start": "cd packages/storyboard-examples && yarn run example",
    "lint": "eslint packages",
    "xxl": "xxl --src packages --exclude node_modules,/lib/",
    "jest": "jest --watch --coverage",
    "jest-html": "jest-html --css-patterns test/snapshot.css --snapshot-patterns \"packages/**/*.snap\"",
    "test": "yarn run testCovFull",
    "testFast": "mocha && jest",
    "testCovFull": "npm run testCovPrepare && npm run testDev && npm run testProd && npm run testBrowser && npm run testCovReport",
    "testCovFast": "npm run testCovPrepare && npm run testDev && npm run testCovReport",
    "testCovPrepare": "rm -rf ./coverage .nyc_output .nyc_tmp && mkdir .nyc_tmp",
    "testCovReport": "cp -r .nyc_tmp .nyc_output && nyc report --reporter=html --reporter=lcov --reporter=text",
    "testDev": "cross-env NODE_ENV=development yarn run testCov && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-dev.json",
    "testProd": "cross-env NODE_ENV=production yarn run testCov && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-prod.json",
    "testBrowser": "cross-env NODE_ENV=development TEST_BROWSER=true yarn run testCov && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-browser.json",
    "testCov": "nyc node_modules/mocha/bin/_mocha && mv .nyc_output/* .nyc_tmp/ && rm -rf .nyc_output && jest --coverage && mv .nyc_output/coverage-final.json .nyc_tmp && rm -rf .nyc_output",
    "prepareRelease": "babel-node scripts/prepareRelease",
    "release": "babel-node scripts/release"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.18.2",
    "babel-eslint": "7.0.0",
    "babel-jest": "17.0.2",
    "babel-loader": "6.2.10",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-2": "6.18.0",
    "chai": "3.5.0",
    "coffee-script": "1.10.0",
    "coveralls": "2.11.15",
    "cross-env": "1.0.7",
    "css-loader": "0.26.1",
    "eslint": "3.8.1",
    "eslint-config-airbnb": "12.0.0",
    "eslint-plugin-flowtype": "2.20.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.4.1",
    "file-loader": "0.10.0",
    "globby": "^6.1.0",
    "ignore-styles": "4.0.0",
    "inquirer": "^3.0.1",
    "jest": "17.0.3",
    "jest-html": "^1.2.0",
    "mocha": "2.4.5",
    "node-sass": "4.5.0",
    "nyc": "8.4.0",
    "sass-loader": "4.1.1",
    "semver": "5.3.0",
    "shelljs": "^0.7.6",
    "sinon": "1.17.6",
    "sinon-chai": "2.8.0",
    "split": "^1.0.0",
    "storyboard": "^2.0.0",
    "style-loader": "0.13.1",
    "timm": "^1.2.3",
    "webpack": "2.2.1",
    "xxl": "^1.0.1"
  },
  "nyc": {
    "exclude": [
      "packages/storyboard-core/lib/vendor/**",
      "node_modules/**/*",
      "**/node_modules/**/*",
      "test/**"
    ]
  },
  "jest": {
    "testRegex": "packages/.*__tests__/.*\\.(test|spec)\\.(js|jsx)$",
    "moduleNameMapper": {
      "^.+\\.(css|less|sass)$": "<rootDir>/test/emptyObject.js",
      "^.+\\.(gif|ttf|eot|svg)$": "<rootDir>/test/emptyString.js"
    },
    "coverageDirectory": ".nyc_output",
    "coverageReporters": [
      "json",
      "text",
      "html"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-html"
    ],
    "collectCoverageFrom": [
      "packages/storyboard/src/**",
      "packages/storyboard-core/lib/**",
      "!packages/storyboard-core/lib/vendor/**",
      "packages/storyboard-extension-chrome/src/**",
      "packages/storyboard-listener-*/lib/**",
      "packages/storyboard-preset-*/lib/**",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/__mocks__/**"
    ]
  }
}