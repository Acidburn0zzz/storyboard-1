{
  "name": "storyboard",
  "private": true,
  "version": "3.0.0-rc.0",
  "author": "Guillermo Grau Panea",
  "license": "MIT",
  "description": "End-to-end, hierarchical, real-time, colorful logs and stories",
  "keywords": [
    "log",
    "logging",
    "websockets",
    "console",
    "isomorphic"
  ],
  "homepage": "https://github.com/guigrpa/storyboard#readme",
  "bugs": {
    "url": "https://github.com/guigrpa/storyboard/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guigrpa/storyboard.git"
  },
  "scripts": {
    "travis": "yarn run bootstrap && yarn run compile && yarn run test",
    "build": "yarn run bootstrap && yarn run lint && yarn run compile && yarn run buildAllProducts && yarn run test && yarn run xxl && yarn run prepareRelease",
    "bootstrap": "oao bootstrap",
    "compile": "oao all \"yarn run compile\"",
    "buildAllProducts": "yarn run buildServerLogsApp && yarn run buildExamples && yarn run buildExtension",
    "buildServerLogsApp": "cd packages/storyboard-server-logs-app && yarn run build",
    "buildExamples": "cd packages/storyboard-examples && yarn run build",
    "buildExtension": "cd packages/storyboard-extension-chrome && yarn run build",
    "start": "cd packages/storyboard-examples && yarn run example",
    "lint": "eslint packages",
    "xxl": "xxl --src packages --exclude node_modules,/lib/",
    "jest": "jest --watch --coverage",
    "jest-html": "jest-html --css-patterns test/snapshot.css --snapshot-patterns \"packages/**/*.snap\"",
    "test": "yarn run testCovFull",
    "testFast": "mocha && jest",
    "testCovFull": "npm run _testCovPrepare && npm run _testDev && npm run _testProd && npm run _testBrowser && npm run _testCovReport",
    "testCovFast": "npm run _testCovPrepare && npm run _testDev && npm run _testCovReport",
    "_testCovPrepare": "rm -rf ./coverage .nyc_output .nyc_tmp && mkdir .nyc_tmp",
    "_testCovReport": "cp -r .nyc_tmp .nyc_output && nyc report --reporter=html --reporter=lcov --reporter=text",
    "_testDev": "cross-env NODE_ENV=development yarn run _testCov && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-dev.json",
    "_testProd": "cross-env NODE_ENV=production yarn run _testCov && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-prod.json",
    "_testBrowser": "cross-env NODE_ENV=development TEST_BROWSER=true yarn run _testCov && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-browser.json",
    "_testCov": "nyc node_modules/mocha/bin/_mocha && mv .nyc_output/* .nyc_tmp/ && rm -rf .nyc_output && jest --coverage && mv .nyc_output/coverage-final.json .nyc_tmp && rm -rf .nyc_output",
    "prepareRelease": "oao prepublish",
    "release": "oao publish"
  },
  "devDependencies": {
    "babel-cli": "6.22.2",
    "babel-core": "6.22.1",
    "babel-eslint": "7.1.1",
    "babel-jest": "18.0.0",
    "babel-loader": "6.2.10",
    "babel-polyfill": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.22.0",
    "babel-preset-stage-2": "6.22.0",
    "chai": "3.5.0",
    "coffee-script": "1.12.3",
    "coveralls": "2.11.16",
    "cross-env": "3.1.4",
    "css-loader": "0.26.1",
    "eslint": "3.15.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-plugin-flowtype": "2.30.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.9.0",
    "file-loader": "0.10.0",
    "ignore-styles": "5.0.1",
    "jest": "18.1.0",
    "jest-html": "^1.2.0",
    "mocha": "3.2.0",
    "node-sass": "4.5.0",
    "nyc": "10.1.2",
    "oao": "0.3.1",
    "sass-loader": "5.0.0",
    "sinon": "1.17.7",
    "sinon-chai": "2.8.0",
    "style-loader": "0.13.1",
    "webpack": "2.2.1",
    "xxl": "^1.0.1"
  },
  "nyc": {
    "exclude": [
      "packages/storyboard-core/lib/vendor/**",
      "test/**"
    ]
  },
  "jest": {
    "testRegex": "packages/.*__tests__/.*\\.(test|spec)\\.(js|jsx)$",
    "moduleNameMapper": {
      "^.+\\.(css|less|sass)$": "<rootDir>/test/emptyObject.js",
      "^.+\\.(gif|ttf|eot|svg)$": "<rootDir>/test/emptyString.js"
    },
    "coverageDirectory": ".nyc_output",
    "coverageReporters": [
      "json",
      "text",
      "html"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-html"
    ],
    "collectCoverageFrom": [
      "packages/storyboard/src/**",
      "packages/storyboard-core/lib/**",
      "!packages/storyboard-core/lib/vendor/**",
      "packages/storyboard-extension-chrome/src/**",
      "packages/storyboard-listener-*/lib/**",
      "packages/storyboard-preset-*/lib/**",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/__mocks__/**"
    ]
  }
}