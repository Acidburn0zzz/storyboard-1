{
  "name": "storyboard",
  "version": "0.0.1",
  "description": "A colourful, isomorphic, hierarchical logging solution",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "testMinified": "TEST_MINIFIED_LIB=1 mocha",
    "compile": "rm -rf dist && coffee -o dist -c src",
    "docs": "coffee tools/extractDocs.coffee",
    "uglify": "NODE_ENV=production envify dist/storyboard.js | uglifyjs - -o dist/storyboard.min.js --mangle --compress --comments '/\\|/'",
    "build": "npm test && npm run compile && npm run uglify && npm run testMinified && npm run docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guigrpa/storyboard.git"
  },
  "keywords": [
    "log",
    "logging",
    "websockets",
    "console",
    "isomorphic"
  ],
  "author": "Guillermo Grau Panea",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guigrpa/storyboard/issues"
  },
  "dependencies": {
    "ansi-html": "0.0.5",
    "lodash": "^4.5.0",
    "timm": "^0.3.1"
  },
  "homepage": "https://github.com/guigrpa/storyboard#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "chalk": "^1.1.1",
    "coffee-script": "^1.10.0",
    "envify": "^3.4.0",
    "mocha": "^2.4.5",
    "uglifyjs": "^2.4.10"
  }
}
